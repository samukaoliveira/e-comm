<h1>Olá</h1>

<% if user_signed_in? %>
    <h1>BEM VINDO AO E-COMMERCE</h1>
    <%= link_to " logout", destroy_user_session_path, method: :delete, class: "btn btn-success bi bi-people"  %>
<% else %>
    <h2>Você não está logado... Por favor, se cadastre</h2>
    <%= link_to " Cadastre-se", new_user_registration_path, class: "btn btn-success bi bi-people"  %>
    <%= link_to " login", new_user_session_path, class: "btn btn-primary bi bi-box-arrow-in-right" %>
<% end %>

