<!DOCTYPE html>
<html>
  <head>
    <title>Acesso EComm</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

     <%= stylesheet_link_tag "devise", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "devise", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>
     <section class="ftco-section">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-6 text-center mb-5">
            <h2 class="heading-section"><%= link_to "Ecommerce", root_path %></h2>
          </div>
        </div>

        <div class="row justify-content-center">
          <div class="col-md-7 col-lg-5">
            <div class="login-wrap p-4 p-md-5">
              <div class="icon d-flex align-items-center justify-content-center">
                <span class="bi bi-person-fill bi-3x"></span>
              </div>
              <h3 class="text-center mb-4">Entrar</h3>
              <%# render 'layouts/shared/flash' if flash.present? %>
              <%= yield %>
            </div>
          </div>
        </div>
      </div>
    </section>
  </body>
</html>
