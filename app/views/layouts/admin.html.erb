<!DOCTYPE html>
<html>
  <head>
    <title>Acesso EComm - Admin</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

     <%= stylesheet_link_tag "admin", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "admin", "data-turbo-track": "reload", defer: true %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">
  </head>

  <body>
         <!-- Page Wrapper -->
    <div id="wrapper">

        <%= render 'layouts/admin/sidebar' %>

        <!-- Content Wrapper --> 
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">


                <%= render 'layouts/admin/topbar' %>

                
                <div class="container-fluid">
                <!-- Begin Page Content -->
                    <%= yield %>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

           <%= render 'layouts/admin/footer' %>

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <%= turbo_frame_tag "bootstrap_modal" %>

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    
  </body>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    // Seleciona o botão e a lista do dropdown
    var dropdownBtn = document.getElementById("userDropdown");
    var dropdownList = document.getElementById("dropdownList");

    dropdownList.style.display = 'none';

    // Adiciona um ouvinte de evento de clique ao botão
    dropdownBtn.addEventListener("click", function() {
      
      // Alterna a visibilidade da lista ao clicar no botão
      if (dropdownList.classList.contains('d-none') || elemento.classList.length === 0) {
        dropdownList.classList.remove('d-none');
        dropdownList.classList.add('d-block');
      } else {
        dropdownList.classList.remove('d-block');
        dropdownList.classList.add('d-none');
      }
  });
    });
  </script>
</html>
