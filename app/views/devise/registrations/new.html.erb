<h2>Sign up</h2>

<%= simple_form_for(resource, html: { class: 'login-form' }, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="text-center">
    <%= f.error_notification %>
    <%= render 'devise/shared/error_messages' %>
  </div>

  <div class="form-inputs">
    <%= f.input :name,
                label: false,
                placeholder: 'Nome' %>
    <%= f.input :email,
                required: true,
                autofocus: true,
                label: false,
                placeholder: 'E-mail',
                input_html: { autocomplete: "email" } %>
    <%= f.input :cpf,
                input_html: { class: "mask-cpf" },
                required: true,
                autofocus: true,
                label: false,
                placeholder: 'CPF',
                input_html: { autocomplete: "cpf" } %>
    <%= f.input :phone,
                input_html: { class: "mask-phone" },
                label: false,
                placeholder: 'Telefone' %>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>
  </div>

  
    <%= render "devise/shared/button_submit", f: f, text: 'Cadastrar' %>

<% end %>

<%= render "devise/shared/links" %>
