<p style="color: green"><%= notice %></p>

<h1 class="h3 mb--4 text-gray-800">Detalhes do produto</h1>

<div class="row">
  <div class="col-lg-12">
    <div class="card shadown mb-4">
      <div class="card-body">
        <%= render @product %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-1">
    <%= link_to "Voltar", admin_products_path, class: "btn btn-secondary" %>
  </div>
  <div class="col-lg-1">
    <%= link_to "Editar", admin_edit_product_path(@product), "data-controller": "admin-modal", class: "btn btn-warning" %>
  </div>
  <div class="col-lg-1">
    <%= button_to "Apagar", admin_product_path(@product), method: :delete, class: "btn btn-danger", onclick: "return confirm('Deseja realmente excluir?')" %>
  </div>
</div>
